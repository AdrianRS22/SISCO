<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="container-fluid">
        <div class="row d-flex d-md-block flex-nowrap wrapper">
            <div class="col-md-3 float-left col-1 pl-0 pr-0 width" id="sidebar">
                @{ var areaPorDefecto = new { area = "" }; }
                <div class="list-group border-0 text-center text-md-left">

                    <span id="logo" class="text-center display-3 text-white mb-3">SISCO</span>

                    @Html.ActionLink("Principal", "Index", "Home", areaPorDefecto, new { @class = "list-group-item d-inline-block" })
                    @if (User.IsInRole("Administrador"))
                    {
                        <a class="list-group-item d-inline-block w-100" href="#" id="administracionDropDown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Administración
                        </a>
                        <div class="dropdown-menu" aria-labelledby="administracionDropDown">
                            @Html.ActionLink("Proveedores", "Lista", "Proveedor", areaPorDefecto, new { @class = "dropdown-item" })
                            @Html.ActionLink("Productos", "Lista", "Producto", areaPorDefecto, new { @class = "dropdown-item" })
                        </div>
                    }
                    <br />
                    @Html.Partial("_LoginPartial")
                </div>
            </div>

            <main class="col-md-9 float-left col px-5 pl-md-2 pt-2 main">
                <div class="container-fluid body-content">
                    <div class="card contenedorPrincipal p-3">
                        @RenderBody()
                    </div>
                </div>
            </main>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
